@model DigitalEducation.Entities.Subsection

@{
    ViewData["Title"] = "Создание подраздела";
}

<h1>Создание подраздела</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Subsection" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section" class="control-label"></label>
                <select asp-for="SectionId" class="form-control" asp-items="ViewBag.Sections"></select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Subsection" asp-action="Index">Вернуться к подразделам</a>
</div>

